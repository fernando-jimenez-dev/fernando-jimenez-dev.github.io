---
import "../styles/global.css";

const siteUrl = (Astro.site?.toString() ?? Astro.url.origin).replace(/\/$/, "");
const canonicalUrl = `${siteUrl}${Astro.url.pathname}`;

const pageTitle = "Fernando Jim\u00e9nez | Staff-Level .NET Engineer";
const pageDescription =
	"Fernando J. Jim\u00e9nez is a Staff-Level .NET Engineer and Practical Architect. I build reliable .NET systems, thoughtful architecture, and pragmatic automation.";

const githubUrl = "https://github.com/fernando-jimenez-dev";
const linkedinUrl = "https://www.linkedin.com/in/fernando-jimenez-dev/";
const emailUrl = "mailto:fernando-jimenez-dev@gmail.com";

const personSchema = {
	"@context": "https://schema.org",
	"@type": "Person",
	name: "Fernando J. Jim\u00e9nez",
	alternateName: [
		"Fernando Jim\u00e9nez",
		"Fernando Jimenez",
		"Fernando J Jimenez",
		"Fernando J Jim\u00e9nez",
		"Fernando J. Jimenez",
		"Fernando J. Jim\u00e9nez",
		"Fernando J. Jimenez Calsin",
		"Fernando J. Jim\u00e9nez Calsin",
		"Fernando J. Jimenez Cals\u00edn",
		"Fernando J. Jim\u00e9nez Cals\u00edn",
	],
	url: canonicalUrl,
	jobTitle:
		"Senior .NET Engineer | Staff-Level Engineering Scope | DevOps & Platform Automation",
	sameAs: [githubUrl, linkedinUrl],
	email: "fernando-jimenez-dev@gmail.com",
};
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />

		<title>{pageTitle}</title>
		<meta name="description" content={pageDescription} />
		<meta name="robots" content="index,follow,max-image-preview:large" />
		<meta
			name="keywords"
			content="Fernando Jimenez, Fernando Jimenez Dev, Fernando Jimenez .NET, Fernando Jimenez DevOps, Fernando Jimenez LinkedIn, fernando-jimenez-dev"
		/>
		<link rel="canonical" href={canonicalUrl} />
		<link rel="me" href={githubUrl} />
		<link rel="me" href={linkedinUrl} />
		<link rel="me" href={emailUrl} />

		<meta property="og:type" content="website" />
		<meta property="og:title" content={pageTitle} />
		<meta property="og:description" content={pageDescription} />
		<meta property="og:url" content={canonicalUrl} />
		<meta property="og:site_name" content="Fernando Jimenez" />

		<meta name="twitter:card" content="summary" />
		<meta name="twitter:title" content={pageTitle} />
		<meta name="twitter:description" content={pageDescription} />
		<meta name="twitter:url" content={canonicalUrl} />

		<script
			type="application/ld+json"
			set:html={JSON.stringify(personSchema)}
		/>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100%;
		background: #0b0b0f;
		color: #e5e7eb;
		line-height: 1.6;
	}
</style>
